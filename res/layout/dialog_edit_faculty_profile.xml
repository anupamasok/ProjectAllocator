<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whiterect"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/faculty_limit"
        style="@style/Base.Animation.AppCompat.Dialog"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/facbox1"
        android:fontFamily="@font/ubuntu_m"
        android:hint="@string/enterlimit"
        android:padding="10dp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:background="@drawable/facbox1" />

    <EditText
        android:id="@+id/new_email"
        style="@style/Base.Animation.AppCompat.Dialog"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/facbox1"
        android:fontFamily="@font/ubuntu_m"
        android:hint="@string/enter_new_email"
        android:padding="10dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/new_phonenumber"
        style="@style/Base.Animation.AppCompat.Dialog"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/facbox1"
        android:fontFamily="@font/ubuntu_m"
        android:hint="@string/enter_new_phonenumber"
        android:padding="10dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ScrollView
        android:layout_width="340dp"
        android:layout_height="match_parent">
        android:layout_margin="5dp"
        android:background="@drawable/whiterect"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"

        <ListView
            android:id="@+id/list_expertise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>


</LinearLayout>